<div class="form-group">
  <%= f.label :content_title, "訊息標題", class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.text_field :content_title, { class: "form-control", placeholder: "請輸入標題", required: true } %>
  </div>
</div>

<div class="form-group">
  <%= f.label :content_text, "訊息內容", class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.text_field :content_text, { class: "form-control", placeholder: "請輸入內容", required: true } %>
  </div>
</div>

<!-- TODO 邏輯移至helper -->
<div class="form-group">
  <%= f.label :item_id, "推播商品", class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.select :item_id, Item.all.collect { |item| [item.name, item.id] }, { include_blank: "請選擇商品" }, { class: "form-control", required: true } %>
  </div>
</div>

<div class="form-group">
  <div class="col-sm-offset-2 col-sm-10">
    <%= f.submit "確認送出", class: "btn btn-primary" %>
    <%= link_to "取消離開", admin_notifications_path, class: "btn btn-warning" %>
  </div>
</div>